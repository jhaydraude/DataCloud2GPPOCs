{
  "orgName": "Data Cloud Scratch Org",
  "edition": "Developer",
  "features": ["CustomerDataPlatform","EnableSetPasswordInApi","MarketingUser"],
  "settings": {
    "securitySettings": {
        "passwordPolicies": {
            "expiration": "Never",
            "historyRestriction": "0"
        },
        "enableAdminLoginAsAnyUser": "true"
    },
    "lightningExperienceSettings": {
      "enableS1DesktopEnabled": "true",
      "enableUsersAreLightningOnly": "true",
      "enableLexEndUsersNoSwitching": "true"
    },
    "customerDataPlatformSettings": {
      "enableCustomerDataPlatform": "true"
    }
  }
} 